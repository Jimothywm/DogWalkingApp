<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:id="@+id/paths_layout_id">

            <ImageView
                android:id="@+id/pathImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/staticmap" />


            <TextView
                android:id="@+id/pathText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="183dp"
                android:layout_marginBottom="11dp"
                android:text="name of path"
                android:textSize="20sp" />

            <Button
                android:id="@+id/renameButton"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_alignBottom="@+id/pathImageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="262dp"
                android:layout_marginTop="202dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginBottom="-50dp"
                android:text="Rename"
                app:drawableLeftCompat="@drawable/ic_baseline_edit_24" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="124dp"
                android:layout_height="49dp"
                android:layout_alignBottom="@+id/pathImageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="285dp"
                android:layout_marginBottom="151dp"
                android:text="Delete"
                app:drawableLeftCompat="@drawable/ic_baseline_delete_24" />

            <Button
                android:id="@+id/shareButton"
                android:layout_width="124dp"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="288dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginBottom="199dp"
                android:text="Share"
                app:drawableLeftCompat="@drawable/ic_baseline_share_24" />

            <TextView
                android:id="@+id/nameOfFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="179dp"
                android:layout_marginEnd="352dp"
                android:layout_marginBottom="51dp"
                android:text="" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>